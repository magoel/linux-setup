gentag () {
	local sandbox=$1;
	pushd $sandbox;
	find $sandbox -iname "*.cpp" -o -iname "*.h" -o -iname "*.inl" > src.list;
	gtags -f src.list;
	popd;
}

fixmeta () {
	local sandbox=$1;
	pushd $sandbox;
	chmod a-w dev/otools/ovr/*.meta;
}
